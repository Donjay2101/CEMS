@model IEnumerable<CruiseEntertainmentManagnmentSystem.Models.Position>
@using GridMvc.Html

@Html.Grid(Model).Columns(columns =>
                    {
                        columns.Add()
               .Encoded(false)
               .Sanitized(false)
               .SetWidth(30)
               .Css("hidden-xs") //hide on phones
               .RenderValueAs(c =>
                @<div id="balloon" class="balloonClass">
                    <b>
                        <a href="#" onclick="goToCreate('/Positions/Edit/@c.ID')">Edit</a>
                        @*@Html.ActionLink("Edit", "Edit", "Positions", new { id = c.ID }, new { @class = "modal_link" })*@
                    </b>
                </div>);
                        columns.Add()
                                   .Encoded(false)
                                   .Sanitized(false)
                                   .SetWidth(30)
                                   .Css("hidden-xs") //hide on phones
                                   .RenderValueAs(c =>
                                    @<div id="balloon" class="balloonClass">
                                        <b>
                                            @*<a href="#" onclick="Delete('@c.ID','@c.Name')">Delete</a>*@
                                            <a href="#" onclick="finalDelete('','@c.Name','/Positions/Delete?ID=@c.ID')">Delete</a>
                                               @*@Html.ActionLink("Delete", "Delete", new { id = c.ID }, new { @class = "modal_link" })*@
                                        </b>
                                    </div>);
                        columns.Add(c => c.Name).Titled("Name");
                        columns.Add(c => c.Description).Titled("Description");
                    }).Sortable().Filterable().WithMultipleFilters()


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/Common.js"></script>
<script src="~/Scripts/gridmvc.min.js"></script>

<script>

    function Delete(ID, Name) {

        finalDelete(ID, Name, "/Performers/Delete");
    }
</script>
<style>
    .grid-header{
            text-align: center;
    }

</style>