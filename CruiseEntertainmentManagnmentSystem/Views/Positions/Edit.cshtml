@model CruiseEntertainmentManagnmentSystem.Models.Position

@{
    ViewBag.Title = "Position";
}

<h2 class="title pad">@ViewBag.Title</h2>


@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset style="padding-left: 15px;">

        @Html.HiddenFor(model => model.ID)
        <div class="row">
            <div class="col-md-5">
                <div class="editor-label">
                    @Html.LabelFor(model => model.Name)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.CategoryID)
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.CategoryID, (SelectList)ViewBag.Categories)
                    @*@Html.TextBoxFor(model => model.Name)*@
                    @Html.ValidationMessageFor(model => model.CategoryID)
                </div>
                <div class="editor-label">
                    <label>Pay</label>
                    @*@Html.LabelFor(model => model.Payrange)*@
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.Payrange)
                    @Html.ValidationMessageFor(model => model.Payrange)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Description)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.Description)
                    @Html.ValidationMessageFor(model => model.Description)
                </div>

            </div>
        </div>
      
        <div class="row">
            <input type="submit" value="Save" class="btn" style=" margin-left: 19px;" /><span></span>
            @*@Html.ActionLink("Back to List", "Index")*@

            <a href="#" onclick="goToPrevious('@ViewBag.ReturnUrl')">cancel</a>

        </div> 
        <br /><br />
    </fieldset>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
