<script>
    $(document).ready(function () {

       debugger;
        var CID;
        
            CID=$('#CruiseID').val();
            
            var view=sessionStorage.getItem("View");
            if(view==1)
            {
                showData(CID);
                return;
            }

        if(CID!=null)
        {
            sessionStorage.setItem('selectedID', CID);
            $('#Cruise').val(CID);
            GetSchedule(CID);
            return;
        }
        var date = new Date();
        createCalendar(date, null);
        id = sessionStorage.getItem('selectedID');
        if(id!=null)
        {
            $('#Cruise').val(id);
        }

        

        $(document).ready(function () {
            $(".date").datepicker({
                changeMonth: true,//this option for allowing user to select month
                changeYear: true //this option for allowing user to select from year range
            });
        });

    });

    $(document).on('change','#Cruise',function(){
        var id = $(this).val();
        GetSchedule(id);

    });

    function GetSchedule(id)
    {
        var year=$('#cmbYear').val();
        if(year == undefined && year=='')
        {
            var curdate = new Date();

            $('#cmbYear').val(curdate.getFullYear());
            year=0;
        }
        sessionStorage.setItem('selectedID', id);
        $.ajax({
            url: '/Cruises/GetSchedules',
            data: { cruiseID: id ,Year:year},
            success: function (data) {
                //debugger;
                getData(data,year);
            },
            error: function () {
            }
        });
    }
    $(function () {
        $("#exp_data").click(function (e) {
            $("#Cal").css("border:1px solid");
            window.open('data:application/vnd.ms-excel,' + encodeURIComponent($('#Cal').html()));
            e.preventDefault();
        });
    });
  
</script>
    <div>
        <input type="hidden" value="@ViewBag.CruiseID" id="CruiseID" />
        <div class="row form-group">
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="row form-group">
                    <div class="col-md-6">
                        @Html.DropDownList("Cruise",(SelectList)ViewBag.Cruise,new { @class= "form-control" })
                        @*@Html.DropDownList("Cruise", "Select")*@
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <a href="#" onclick="addSubSchedule()">Add personnel</a>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <a href="#" onclick="addSchedule()">Add Schedule</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row form-group">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-2"><label class="control-label">For year</label></div>
                            <div class="col-md-8">
                                <select id="cmbYear" style="width: 71px;" class="form-control">
                                    @{

                                        int year = DateTime.Now.Year;
                                        int startYear = year - 10;
                                    }
                                    @for (int i = 1; i <= 20; i++)
                                    {
                                        if (year == startYear)
                                        {
                                            <option value="@startYear" selected>@startYear</option>
                                        }
                                        else
                                        {
                                            <option value="@startYear">@startYear</option>
                                        }

                                        startYear++;
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <a href="#" onclick="showData()">Get Yearly View</a>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <a href="#" onclick="openNotes()">Add Notes </a>
                        <a href="#" onclick="getData(@ViewBag.Data)" style="margin-left: 20px;">Get Monthly View</a>
                        <a href="#" id="exp_data" hidden="hidden" style="margin-left: 37px">Export Data</a>
                    </div>
                </div>
            </div>
        </div>            
    </div>
<div class="row form-group">
    <div class="col-md-12">
        <div class="cal-div">
            <div onload="getData(@ViewBag.Data)" id="CalendarDiv">
            </div>
        </div>
        <div id="Cal" style="overflow:scroll;width:90%;height:600px">

        </div>
    </div>
</div>

