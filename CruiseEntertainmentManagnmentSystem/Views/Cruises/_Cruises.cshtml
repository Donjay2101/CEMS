@model IEnumerable<CruiseEntertainmentManagnmentSystem.Models.Cruises>
@using GridMvc.Html

@Html.Grid(Model).Columns(columns =>
                    {
                        columns.Add()
               .Encoded(false)
               .Sanitized(false)
               .SetWidth(30)
               .Css("hidden-xs") //hide on phones
               .RenderValueAs(c =>
                @<div id="balloon" class="balloonClass">
                    <b>
                        <a href="#" onclick="goToCreate('/Cruises/Edit/@c.ID')">Edit</a>
                        @*@Html.ActionLink("Edit", "Edit", "Cruises", new { id = c.ID }, new { @class = "modal_link" })*@
                    </b>
                </div>);
                        columns.Add()
                                   .Encoded(false)
                                   .Sanitized(false)
                                   .SetWidth(30)
                                   .Css("hidden-xs") //hide on phones
                                   .RenderValueAs(c =>
                                    @<div id="balloon" class="balloonClass">
                                        <b>
                                            <a href="#" onclick="finalDelete('','','/Cruises/Delete?ID=@c.ID')">Delete</a>
                                            @*@Html.ActionLink("Delete", "Delete", new { id = c.ID }, new { @class = "modal_link" })*@
                                        </b>
                                    </div>);
                        columns.Add()
                                                     .Encoded(false)
                                                     .Sanitized(false)
                                                     .SetWidth(30)
                                                     .Css("hidden-xs") //hide on phones
                                                     .RenderValueAs(c =>
                                                        @<div id="balloon" class="balloonClass">
                                                            <b>
                                                                @Html.ActionLink("Schedule","ShowSchedule", "Cruises", new { id = c.ID }, new { @class = "modal_link" })
                                                            </b>
                                                        </div>);
                        columns.Add(c => c.Name).Titled("Cruise Name");
                        columns.Add(c => c.ShipBrand).Titled("Ship Brand");
                        columns.Add(c => c.Description).Titled("Description").Filterable(true);
                    }).Sortable().Filterable().WithMultipleFilters()



<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/Common.js"></script>
<script src="~/Scripts/gridmvc.min.js"></script>
