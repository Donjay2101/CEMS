@model IEnumerable<CruiseEntertainmentManagnmentSystem.ViewModel.CabinBookingViewModel>

@using GridMvc.Html

@Html.Grid(Model).Columns(columns =>
                    {
                        columns.Add()
               .Encoded(false)
               .Sanitized(false)
               .SetWidth(30)
               .Css("hidden-xs") //hide on phones
               .RenderValueAs(c =>
                @<div id="balloon" class="balloonClass">
                    <b>
                        <a href="#" onclick="goToCreate('/Edit/CabinBookings/@c.ID')" class="modal_link">Edit</a>
                        @*@Html.ActionLink("Edit", "Edit", "CabinBookings", new { id = c.ID , returnUrl="~/CabinBookings/Index"}, new { @class = "modal_link" })*@
                    </b>
                </div>);
                        columns.Add()
                                   .Encoded(false)
                                   .Sanitized(false)
                                   .SetWidth(30)
                                   .Css("hidden-xs") //hide on phones
                                   .RenderValueAs(c =>
                                    @<div id="balloon" class="balloonClass">
                                        <b>
                                            <a href="#" onclick="finalDelete('','@c.Name','/CabinBookings/Delete?ID=@c.ID')">Delete</a>
                                            @*@Html.ActionLink("Delete", "Delete", new { id = c.ID }, new { @class = "modal_link" })*@
                                        </b>
                                    </div>);
                        columns.Add(c => c.Name).Titled("Name");
                        columns.Add(c => c.CabinName).Titled("Cabin").Filterable(true);
                        columns.Add(c => c.BookingTypeName).Titled("Booking Type").Filterable(true);
                        columns.Add(c => c.PositionName).Titled("Position").Filterable(true);
                        columns.Add(c => c.BookingFrom).Titled("Booking Start Date").Filterable(true).Format("{0:dd/MM/yyyy}");
                        columns.Add(c => c.BookingTo).Titled("Booking End Date").Filterable(true).Format("{0:dd/MM/yyyy}");
                        columns.Add(c => c.Hotel).Titled("Hotel").Filterable(true);
                        columns.Add(c => c.Fleet).Titled("Fleet").Filterable(true);
                        columns.Add(c => c.Requestor).Titled("Requestor").Filterable(true);
                        columns.Add(c => c.Reservation).Titled("Reservation").Filterable(true);
                        
                    }).Sortable().Filterable().WithMultipleFilters()

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/Common.js"></script>
<script src="~/Scripts/gridmvc.min.js"></script>