@model IEnumerable<CruiseEntertainmentManagnmentSystem.ViewModel.PerformerViewmodel>
@using GridMvc.Html


<script>

    function Delete(ID, Name) {

        finalDelete(ID, Name, "/Performers/Delete");
    }
</script>



@Html.Grid(Model).Columns(columns =>
                    {
                        columns.Add()
               .Encoded(false)
               .Sanitized(false)
               .SetWidth(30)
               .Css("hidden-xs") //hide on phones
               .RenderValueAs(c =>
                @<div id="balloon" class="balloonClass">
                    <b>
                        <a href="#" onclick="goToCreate('/Performers/Edit/@c.ID')">Edit</a>
                        @*@Html.ActionLink("Edit", "Edit", "Performers", new { id = c.ID }, new { @class = "modal_link" })*@
                    </b>
                </div>);
                        columns.Add()
                                   .Encoded(false)
                                   .Sanitized(false)
                                   .SetWidth(30)
                                   .Css("hidden-xs") //hide on phones
                                   .RenderValueAs(c =>
                                    @<div id="balloon" class="balloonClass">
                                        <b>
                                            <a href="#" onclick="Delete('@c.ID','@c.Name')">Delete</a>
                                            @*@Html.ActionLink("Delete", "Delete", new { id = c.ID }, new { @class = "modal_link" })*@
                                        </b>
                                    </div>);
                        columns.Add(c => c.Alias).Titled("Performer Alias");
                        columns.Add(c => c.Name).Titled("Name").Filterable(true);
                        // columns.Add(c => c.Description).Titled("Description");
                        columns.Add(c => c.GroupName).Titled("Group Name");
                        //columns.Add(c => c.PGroup).Titled("");
                    }).Sortable().Filterable().WithMultipleFilters()


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/Common.js"></script>
<script src="~/Scripts/gridmvc.min.js"></script>