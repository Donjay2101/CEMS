@model IEnumerable<CruiseEntertainmentManagnmentSystem.ViewModel.TRFModel>

@using GridMvc.Html

@Html.Grid(Model).Columns(columns =>
         {
             columns.Add()
    .Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .Css("hidden-xs") //hide on phones
    .RenderValueAs(c =>
     @<div id="balloon" class="balloonClass">
         <b>
             @Html.ActionLink("View TRF", "TRFEdit", "USerHome", new { cruiseID = c.CruiseID }, new { @class = "modal_link" })
         </b>
     </div>);
             columns.Add(c => c.StartDate).Titled("Start Date");
             columns.Add(c => c.EndDate).Titled("End Date").Filterable(true);
             // columns.Add(c => c.Description).Titled("Description");
             columns.Add(c => c.CruiseName).Titled("Ship");
            
             //columns.Add(c => c.PGroup).Titled("");
         }).WithPaging(10).Sortable().Filterable().WithMultipleFilters()

