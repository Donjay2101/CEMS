@model CruiseEntertainmentManagnmentSystem.Models.Shows

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="title pad">@ViewBag.Title</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset style="margin :10px;">

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Name, new { @class = "onefourth" })
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Ship)
        </div>
        <div class="editor-field">
            @Html.DropDownList("ship", "--Select--")
            @Html.ValidationMessageFor(model => model.Ship)
        </div>
       
    </fieldset>

<div class="row">
    <input type="submit" value="Create" class="btn" style=" margin-left: 19px;" /><span></span>@*@Html.ActionLink("Back to List", "Index")*@



    <a href="#" onclick="goToPrevious('@ViewBag.ReturnUrl')">cancel</a>

</div>
<br /><br />
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
