@model IEnumerable<CruiseEntertainmentManagnmentSystem.ViewModel.ShowsViewModel>
@using GridMvc.Html

@Html.Grid(Model).Columns(columns =>
                    {
                        columns.Add()
               .Encoded(false)
               .Sanitized(false)
               .SetWidth(30)
               .Css("hidden-xs") //hide on phones
               .RenderValueAs(c =>
                @<div id="balloon" class="balloonClass">
                    <b>
                        <a href="#" onclick="goToCreate('Shows/Edit/@c.ID')">Edit</a>

                        @*@Html.ActionLink("Edit", "Edit", "Shows", new { id = c.ID }, new { @class = "modal_link" })*@
                    </b>
                </div>);
                        columns.Add()
                                   .Encoded(false)
                                   .Sanitized(false)
                                   .SetWidth(30)
                                   .Css("hidden-xs") //hide on phones
                                   .RenderValueAs(c =>
                                    @<div id="balloon" class="balloonClass">
                                        <b>
                                            @*<a href="#" onclick="Delete('@c.ID','@c.Name')">Delete</a>*@
                                            <a href="#" onclick="finalDelete('@c.ID','@c.Name','/Shows/Delete')">Delete</a>
                                            @*@Html.ActionLink("Delete", "Delete", new { id = c.ID }, new { @class = "modal_link" })*@
                                        </b>
                                    </div>);
                        columns.Add(c => c.Name).Titled("Name");
                        columns.Add(c => c.Ship).Titled("Ship");
                    }).WithPaging(10).Sortable().Filterable().WithMultipleFilters()


<style>
    .grid-header {
        text-align: center;
    }
</style>