@model IEnumerable<CruiseEntertainmentManagnmentSystem.Models.Category>
@using GridMvc.Html

@Html.Grid(Model).Columns(columns =>
                    {
                        columns.Add()
               .Encoded(false)
               .Sanitized(false)
               .SetWidth(30)
               .Css("hidden-xs") //hide on phones
               .RenderValueAs(c =>
                @<div id="balloon" class="balloonClass">
                    <b>
                        <a href="#" class="modal_link" onclick="goToCreate('/Categories/Edit/@c.ID')">Edit</a>
                        @*@Html.ActionLink("Edit", "Edit", "Categories", new { id = c.ID }, new { @class = "modal_link" })*@
                    </b>
                </div>);
                        columns.Add()
                                   .Encoded(false)
                                   .Sanitized(false)
                                   .SetWidth(30)
                                   .Css("hidden-xs") //hide on phones
                                   .RenderValueAs(c =>
                                    @<div id="balloon" class="balloonClass">
                                        <b>
                                            @*<a href="#" onclick="Delete('@c.ID','@c.Name')">Delete</a>*@
                                            <a href="#" onclick="finalDelete('','@c.Name','/Categories/Delete?ID=@c.ID')">Delete</a>
                                            @*@Html.ActionLink("Delete", "Delete", new { id = c.ID }, new { @class = "modal_link" })*@
                                        </b>
                                    </div>);
                        columns.Add()
                                   .Encoded(false)
                                   .Sanitized(false)
                                   .SetWidth(30)
                                   .Css("hidden-xs") //hide on phones
                                   .RenderValueAs(c =>
                                    @<div id="balloon" class="balloonClass">
                                        <b>
                                           <a href="#" onclick="copyCategory(@c.ID)">Copy</a>
                                        </b>
                                    </div>);
                        columns.Add(c => c.Name).Titled("Name");
                        columns.Add(c => c.Address).Titled("Address");
                        columns.Add(c => c.Payrate).Titled("Pay Rate");
                    }).Sortable().Filterable().WithMultipleFilters()
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/Common.js"></script>
<script src="~/Scripts/gridmvc.min.js"></script>
<style>
    .grid-header {
        text-align: center;
    }
</style>