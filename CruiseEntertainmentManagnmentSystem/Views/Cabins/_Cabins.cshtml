@model IEnumerable<CruiseEntertainmentManagnmentSystem.ViewModel.CabinsViewModel>

@using GridMvc.Html

@Html.Grid(Model).Columns(columns =>
                    {
                        columns.Add()
               .Encoded(false)
               .Sanitized(false)
               .SetWidth(30)
               .Css("hidden-xs") //hide on phones
               .RenderValueAs(c =>
                @<div id="balloon" class="balloonClass">
                    <b>
                        <a href="#" class="modal_link" onclick="gotToCreate('/Cabins/Edit/@c.ID')">Edit</a>
                        @*@Html.ActionLink("Edit", "Edit", "Cabins", new { id = c.ID }, new { @class = "modal_link" })*@
                    </b>
                </div>);
                        columns.Add()
                                   .Encoded(false)
                                   .Sanitized(false)
                                   .SetWidth(30)
                                   .Css("hidden-xs") //hide on phones
                                   .RenderValueAs(c =>
                                    @<div id="balloon" class="balloonClass">
                                        <b>
                                            <a href="#" onclick="finalDelete('','@c.CabinName','/Cabins/Delete?ID=@c.ID')">Delete</a>
                                            @*@Html.ActionLink("Delete", "Delete", new { id = c.ID }, new { @class = "modal_link" })*@
                                        </b>
                                    </div>);
                        columns.Add()
                                  .Encoded(false)
                                  .Sanitized(false)
                                  .SetWidth(30)
                                  .Css("hidden-xs") //hide on phones
                                  .RenderValueAs(c =>
                                    @<div id="balloon" class="balloonClass">
                                        <b>
                                            <a href="/CabinBookings/Create?ID=@c.ID&returnUrl=~/Cabins/Index" class="modal_link">Book</a>                                            
                                        </b>
                                    </div>);
                       
                        columns.Add(c => c.CabinName).Titled("Cabin Name");
                        columns.Add(c => c.CabinType).Titled("Cabin Type").Filterable(true);
                        columns.Add(c => c.CategoryName).Titled("Cateogory").Filterable(true);
                    }).Sortable().Filterable().WithMultipleFilters()




<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/Common.js"></script>
<script src="~/Scripts/gridmvc.min.js"></script>