@model IEnumerable<CruiseEntertainmentManagnmentSystem.ViewModel.PersonsViewModel>

@using GridMvc.Html

@Html.Grid(Model).Columns(columns =>
                    {
                        columns.Add()
               .Encoded(false)
               .Sanitized(false)
               .SetWidth(30)
               .Css("hidden-xs") //hide on phones
               .RenderValueAs(c =>
                @<div id="balloon" class="balloonClass">
                    <b>
                        <a href="#" onclick="goToCreate('Persons/Edit/@c.ID')">Edit</a>*
                        @*@Html.ActionLink("Edit", "Edit", "Persons", new { id = c.ID }, new { @class = "modal_link" })*@
                    </b>
                </div>);
                        columns.Add()
                                   .Encoded(false)
                                   .Sanitized(false)
                                   .SetWidth(30)
                                   .Css("hidden-xs") //hide on phones
                                   .RenderValueAs(c =>
                                    @<div id="balloon" class="balloonClass">
                                        <b>
                                            @*<a href="#" onclick="Delete('@c.ID','@c.Name')">Delete</a>*@
                                            <a href="#" onclick="finalDelete('@c.ID','@c.FirstName','/Persons/Delete')">Delete</a>
                                            @*@Html.ActionLink("Delete", "Delete", new { id = c.ID }, new { @class = "modal_link" })*@
                                        </b>
                                    </div>);
                        columns.Add(c => c.FirstName).Titled("FirstName");
                        columns.Add(c => c.LastName).Titled("LastName");
                        columns.Add(c => c.Alias).Titled("Alias");
                        columns.Add(c => c.Phone).Titled("Phone");
                        columns.Add(c => c.Email).Titled("Email");
                        columns.Add(c => c.Address).Titled("Address");
                        columns.Add(c => c.City).Titled("City");
                        columns.Add(c => c.State).Titled("State");
                        columns.Add(c => c.Zip).Titled("Zip");                                               
                    }).WithPaging(10).Sortable().Filterable().WithMultipleFilters()


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/Common.js"></script>
<script src="~/Scripts/gridmvc.min.js"></script>

<style>
    .grid-header {
        text-align: center;
    }
</style>